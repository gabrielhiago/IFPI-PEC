def maior_que():
    num = int(input('Digite um valor inteiro qualquer: ').strip())
    maior = num
    menor = num
    while True:
        num = int(input('Digite um valor inteiro qualquer: ').strip())
        if num == 0:
            break
        else:
            if num > maior:
                maior = num
            if num < menor:
                menor = num
    return f'Maior valor lido: {maior}\nMenor valor lido: {menor}'

def main():
    print(maior_que())

if __name__ == '__main__':
    main()
