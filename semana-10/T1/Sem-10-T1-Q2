def media():
    soma = 0
    quantidade = 0
    while True:
        num = int(input('Informe um valor inteiro positivo qualquer: ').strip())
        if num == 0:
            break
        else:
            soma += num
            quantidade += 1
    media = soma / quantidade
    return f'A média entre os valores lidos é de {media}'

def main():
    print(media())

if __name__ == '__main__':
    main()
