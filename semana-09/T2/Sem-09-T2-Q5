def simulacao(compra, prestacao = 24):
    for parcela in range(1, prestacao + 1):
        divisao = compra / parcela
        print(f'{parcela}x de R$ {divisao:.2f}')

def main():
    valor_compra = int(input('Digite o valor da compra em R$: ').strip())
    simulacao(valor_compra)

if __name__ == '__main__':
    main()
